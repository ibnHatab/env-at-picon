#!/bin/sh

EXT=$1
# echo $EXT

shift
CMD=$@

echo $CMD

# exit

while true
do
    inotifywait -r -q --exclude ".*_flymake.*" --exclude "\.#.*"  $EXT
    if [ $? -eq 0 ]; then
	eval "$CMD"
	RES=$?
	TIME=`date +%T`
	if [ $RES -eq 0 ]; then
	    echo "\033[1;32m ($TIME)  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++\033[m"
	else
	    echo "\033[1;31m ($TIME)  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++\033[m"
	fi
    else
	exit
    fi
done



