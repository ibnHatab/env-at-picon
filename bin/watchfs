#!/bin/sh

# echo $EXT

CMD=$1
echo $CMD

shift
FILES=$@
echo $FILES

# exit

while true
do
    inotifywait -r -q --event=modify --exclude ".*_flymake.*" --exclude "\.#.*" --exclude "tmp" --exclude ".*\.log" $FILES
    if [ $? -eq 0 ]; then
	eval "$CMD"
	RES=$?
	TIME=`date +%T`
	if [ $RES -eq 0 ]; then
	    echo "\033[1;32m ($TIME)  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++\033[m"
	else
	    echo "\033[1;31m ($TIME)  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++\033[m"
	fi
    else
	exit
    fi
done
